@using Coditech.ViewModel
@model ProductMasterListViewModel
@{
    ViewBag.Title = "Product List";
    string actionName = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css">
<div class="container-fluid listing-wrapper mt-4 main-content-wrapper">
    <div class="row">
        <div class="col-lg-12 d-flex align-items-center justify-content-center right-side">
            <div class="list-wrapper">
                <div class="align-items-center d-flex justify-content-between wrapper-header mb-3">
                    <h1 class="text-center font-poppins">Product List</h1>
                    <select name="stausId" id="stausId" class="form-control" style="width:200px;">
                        @if (Model.FilterBy == "true")
                        {
                            <option value="true" selected>Active</option>
                            <option value="false">In-Active</option>
                            <option value="">All</option>
                        }
                        else if (Model.FilterBy == "false")
                        {
                            <option value="true">Active</option>
                            <option value="false" selected>In-Active</option>
                            <option value="">All</option>
                        }
                        else
                        {
                            <option value="true">Active</option>
                            <option value="false">In-Active</option>
                            <option value="" selected>All</option>
                        }
                    </select>
                    <a class="btn btn-set-default add-new-product base-font-size" href="../@controllerName/ExportToExcel">
                        <i class="fa fa-download"></i> Export To Excel
                    </a>
                    <a class="btn btn-set-default add-new-product base-font-size" href="../@controllerName/Create">
                        <i class="fa fa-plus-circle"></i> Add New Product
                    </a>
                </div>
                <div class="table-responsive table-wrapper">
                    <table class="table table-striped table-bordered" id="ProductTableId">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>File Name</th>
                                <th>Version</th>
                                <th>Downloaded Count</th>
                                <th>Uploaded By</th>
                                <th>Updated Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.ProductMasterList?.Count > 0)
                            {
                                foreach (ProductMasterViewModel item in Model.ProductMasterList)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.FileName</td>
                                        <td>@item.Version</td>
                                        <td style="text-align:center">@item.DownloadCount</td>
                                        <td style="text-align:center">@item.UploadedBy</td>
                                        <td style="text-align:center">@item.ModifiedDate</td>
                                        <td style="text-align:center">
                                            @if (@item.IsActive)
                                            {
                                                <img src="~/Content/Images/active.svg" style="width:20px; height:20px;" />
                                                <span style="display:none">1</span>
                                            }
                                            else
                                            {
                                                <img src="~/Content/Images/inactive.png" style="width:20px; height:20px;" />
                                                <span style="display:none">0</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="align-items-center d-flex justify-content-around action-container">
                                                <a href="../@controllerName/Edit?productMasterId=@item.ProductMasterId" class="action-icon edit-product" title="Edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                <a href="../@controllerName/DownloadUserManual?productuniquecode=@item.ProductUniqueCode" class="action-icon upload-product" title="download user manual"><i class="fa fa-download" aria-hidden="true"></i></a>
                                                @*<a href="../@controllerName/Delete?productMasterIds=@item.ProductMasterId" class="action-icon delete-product" title="Delete"><i class="fa fa-trash" aria-hidden="true"></i></a>*@
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src='https://code.jquery.com/jquery-3.7.1.js'></script>
<script src='https://cdn.datatables.net/2.0.5/js/dataTables.js'></script>
<script>
    new DataTable('#ProductTableId', {
        layout: {
            bottomEnd: {
                paging: {
                    boundaryNumbers: false
                }
            }
        }
    });
    $(function () {
        $("#stausId").change(function () {
            window.location = location.href.replace("true", "").replace("True", "").replace("false", "").replace("False", "") + this.value
        });
    });
</script>