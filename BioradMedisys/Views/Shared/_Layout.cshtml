@using Coditech.Utilities.Helper;
@using Coditech.Utilities.Constant;
@using Coditech.Model;
@{
    string title = System.Convert.ToString(CoditechSetting.ProjectTitle);
    string messageData = Convert.ToString(TempData["Notifications"]);
    UserModel userData = CoditechSessionHelper.GetDataFromSession<UserModel>(CoditechConstant.UserDataSession);
    TempData.Remove("Notifications");
}
<!DOCTYPE html>
<html class="loaded" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="PIXINVENT">
    <title>@ViewBag.Title | @title </title>
    <title>Biorad Medisys Pvt Ltd.</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <style>
        #loader {
            border: 12px solid #f3f3f3;
            border-radius: 50%;
            border-top: 12px solid #444444;
            width: 70px;
            height: 70px;
            animation: spin 1s linear infinite;
        }

        .center {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
        }

        @@keyframes spin {
            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<!-- END: Head-->
<!-- BEGIN: Body-->
<body style="background: url('../../Content/Images/BioradMedisysBackground.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover; ">
    <div id="loader" class="center" style="display: none"></div>
    <header class="main-header-wrapper d-flex justify-content-between align-items-center">
        <div class="logo-container">
            <img src="~/Content/Images/biorad-logo.svg" alt="Logo" />
        </div>
        <div class="user-login-wrapper">
            <nav class="profile-navigation d-flex gap-10">
                <div class="sign-in-log-off">
                    <a href="../ProductMaster/List?filterBy=true" class="base-font-size">
                        <i class="fa fa-solid fa-user"></i> Product List
                    </a>
                </div>
                <div class="sign-in-log-off">
                    <a href="#" class="base-font-size">
                        <i class="fa fa-solid fa-user"></i> User List
                    </a>
                </div>
                <div class="sign-in-log-off">
                    <a href="#" class="base-font-size">
                        <i class="fa fa-solid fa-user"></i> Role List
                    </a>
                </div>
                <div class="sign-in-log-off">
                    <a href="#" class="base-font-size">
                        <i class="fa fa-solid fa-user"></i> Role wise Form Access
                    </a>
                </div>
            </nav>
        </div>
        <div class="user-login-wrapper">
            <nav class="profile-navigation d-flex gap-10">
                <div class="sign-in-log-off">
                    <a href="#" class="base-font-size">
                        <i class="fa fa-solid fa-user"></i> @userData.FirstName @userData.LastName
                    </a>
                </div>
                <div class="sign-in-log-off">
                    <a href="../User/LogOff" class="base-font-size">
                        <i class="fa fa-sign-out" aria-hidden="true"></i> Log Off
                    </a>
                </div>
            </nav>
        </div>
    </header>
    @Html.Partial("~/Views/Shared/_NotificationMessage.cshtml", @messageData)
    @RenderBody()
    <footer class="footer-wrapper">
        <p class="medium">Copyright © @System.DateTime.Now.Year <a href="#">@title</a> | All rights reserved.</p>
    </footer>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js'></script>
    <script src="~/Scripts/GeneralScript/script.js"></script>
    <script src="~/Scripts/GeneralScript/DataTable.js"></script>
    <script src="~/Scripts/GeneralScript/Notification.js"></script>
    <script src="~/Scripts/GeneralScript/CommanFunction.js"></script>
    <script>
        if (performance.navigation.type == 2) {
            location.reload();
        }

        window.onbeforeunload = function () {
            var inputs = document.getElementsByTagName("button");
            for (var i = 0; i < inputs.length; i++) {
                if (inputs[i].type == "button" || inputs[i].type == "submit") {
                    inputs[i].disabled = true;
                }
            }
        };

        $('#frmProductMaster').on('submit', function (e) {
            $("#loader").show();
        })
    </script>
</body><!-- END: Body-->
</html>